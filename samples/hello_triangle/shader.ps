//float g_Scale : register(b0);
RWStructuredBuffer<int> g_IntBuffer;
//float g_Bias : register(b2);

cbuffer ConstantBuffer : register(b1)
{
    float3  offset;
    float   scale;
}

struct VS_OUTPUT
{
    float4 position : SV_Position;
    float3 color    : TEXCOORD0;
};

float4 main(VS_OUTPUT input) : SV_Target0
{
    return float4(input.color + offset, 1.0f) * scale + g_IntBuffer[0];
}
